<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.emmm.poke">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/pigface"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/pigfaceround"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.MyApplication">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyApplication.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".player_with_player"
            android:label="@string/app_name"
            >
        </activity>

        <activity
            android:name=".player_with_ai"
            android:label="@string/app_name"
            >
        </activity>

        <activity
            android:name=".muti_player"
            android:label="@string/app_name"
            >
        </activity>

        <activity
            android:name=".CrateGameActivity"
            android:label="@string/app_name"
            >
        </activity>

        <activity
            android:name=".JoinGameActivity"
            android:label="@string/app_name"
            >
        </activity>

        <activity
            android:name=".player_with_remote"
            android:label="@string/app_name"
            >
        </activity>

        <activity
            android:name=".HelpActivity"
            android:label="@string/app_name"
            >
        </activity>
    </application>

</manifest>